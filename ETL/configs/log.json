{
    "version" : 1,
    "disable_existing_loggers" : true,
    "formatters" : {
            "simple" : {
                "format" : "%(asctime)s - %(name)s [%(levelname)s]: %(message)s",
                "datefmt" : "%Y-%m-%d %H:%M:%s %p"
                },
            "json" : {
                    "()" : "utils.JsonFormatter",
                    "fmt_keys" : {
                        "level" : "levelname",
                        "message" : "message",
                        "timestamp" : "timestamp",
                        "logger" : "name",
                        "module" : "module", 
                        "function" : "funcName",
                        "line" : "lineno",
                        "thread_name" : "threadName"
                    }
                }
        },
    "handlers" : {
        "info" : {
                "class" : "logging.FileHandler",
                "formatter" : "json",
                "level" : "DEBUG",
		"filename" : "logs/info.log"
            },

        "error" : {
                "class" : "logging.FileHandler",
                "filename" : "logs/error.log",
                "level" : "WARNING",
                "formatter" : "json"
            },

	"queue_handler" : {
		"class" : "logging.handlers.QueueHandler",
		"handlers" : [
			"info",
			"error"
		],
		"respect_handler_level" : true
	}

        },
    "loggers" : {
            "ETL" : {
                    "level" : "DEBUG",
                    "handlers" : ["queue_handler"]
                }
        }
}
